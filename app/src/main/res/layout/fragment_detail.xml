<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".presentation.fragments.detail.DetailFragment">

<LinearLayout android:layout_marginTop="80dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <EditText
            android:drawableStart="@drawable/baseline_task"
            android:layout_gravity="center"
            android:id="@+id/tv_task"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="Task"
            android:textColorHint="#474545"
            android:backgroundTintMode="add"
            android:backgroundTint="@color/black"/>
        <EditText
            android:drawableStart="@drawable/baseline_access"
            android:layout_gravity="center"
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="00:00"
            android:textColorHint="#474545"
            android:backgroundTint="@color/black"
            android:backgroundTintMode="add"
            android:layout_marginStart="100dp"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/add_photo"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/baseline_add_image"/>

    <ImageButton
        android:id="@+id/btn_save_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/baseline_check"
        />


</LinearLayout>
